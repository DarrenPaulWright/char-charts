{
	"exclude": [
		"node_modules"
	],
	"include": [
		"**/*.ts"
	],
	"module": "nodenext",
	"compilerOptions": {
		"baseUrl": ".",
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"alwaysStrict": true,
		"exactOptionalPropertyTypes": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"skipLibCheck": true
	}
}
